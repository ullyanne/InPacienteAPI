generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  cpf         String        @id
  name        String
  address     String
  phoneNumber String?       @map("phone_number")
  appointments Appointment[]

  @@map("patient")
}

model Appointment {
  id         String   @id @default(uuid())
  date       DateTime
  patient    Patient  @relation(fields: [patientCpf], references: [cpf])
  patientCpf String
  doctor     Doctor   @relation(fields: [doctorCrm], references: [crm])
  doctorCrm  String

  @@map("appointment")
}

model Doctor {
  crm         String        @id
  specialty   String
  name        String
  appointments Appointment[]

  @@map("doctor")
}
